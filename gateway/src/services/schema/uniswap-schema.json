{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "versions": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "allowedSlippage": { "type": "string" },
            "gasLimit": { "type": "integer" },
            "ttl": { "type": "integer" }
          },
          "required": ["allowedSlippage", "gasLimit", "ttl"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "uniswapV2RouterAddress": { "type": "string" },
            "uniswapV2FactoryAddress": { "type": "string" },
            "uniswapV3RouterAddress": { "type": "string" },
            "uniswapV3NftManagerAddress": { "type": "string" },
            "maxHops": { "type": "integer" },
            "pools": { "type": "array" }
          },
          "required": [
            "uniswapV2RouterAddress",
            "uniswapV2FactoryAddress",
            "uniswapV3RouterAddress",
            "uniswapV3NftManagerAddress",
            "maxHops",
            "pools"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["versions", "networks"]
}
