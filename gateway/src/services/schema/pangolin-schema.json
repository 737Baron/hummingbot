{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "allowedSlippage": { "type": "string" },
    "gasLimit": { "type": "integer" },
    "ttl": { "type": "integer" },
    "contractAddresses": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "routerAddress": { "type": "string" },
            "factoryAddress": { "type": "string" }
          },
          "required": ["routerAddress", "factoryAddress"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "pools": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "maxHops": { "type": "integer" },
            "pools": { "type": "array" }
          },
          "required": ["maxHops", "pools"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["allowedSlippage", "gasLimit", "ttl", "contractAddresses"]
}
