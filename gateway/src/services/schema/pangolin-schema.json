{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "allowedSlippage": { "type": "string" },
    "gasLimit": { "type": "integer" },
    "ttl": { "type": "integer" },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "routerAddress": { "type": "string" },
            "factoryAddress": { "type": "string" },
            "maxHops": { "type": "integer" },
            "pools": { "type": "array" }
          },
          "required": ["routerAddress", "factoryAddress", "maxHops", "pools"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["allowedSlippage", "gasLimit", "ttl", "networks"]
}
